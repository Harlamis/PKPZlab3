<Window x:Class="PKPZlab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PKPZlab3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,69,0,0" TextWrapping="Wrap" Text="Lab #3" VerticalAlignment="Top" RenderTransformOrigin="0.165,-0.588"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,106,0,0" TextWrapping="Wrap" Text="Enter ranodm text" VerticalAlignment="Top" RenderTransformOrigin="0.377,0.733"/>
        <TextBox x:Name="Input" HorizontalAlignment="Center" Margin="0,160,0,0" TextWrapping="Wrap" Text="Random text" VerticalAlignment="Top" Width="264" GotFocus="Input_GotFocus"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="311,197,0,0" VerticalAlignment="Top" Click="Button_Click" RenderTransformOrigin="-0.546,0.527"/>
        <Label Content="Number of r's:" HorizontalAlignment="Left" Margin="268,244,0,0" VerticalAlignment="Top"/>
        <Label Content="Number of k's:" HorizontalAlignment="Left" Margin="267,284,0,0" VerticalAlignment="Top"/>
        <Label Content="Number of t's:" HorizontalAlignment="Left" Margin="268,324,0,0" VerticalAlignment="Top"/>
        <Label x:Name="r_counter" Content="0" HorizontalAlignment="Left" Margin="362,244,0,0" VerticalAlignment="Top"/>
        <Label x:Name="k_counter" Content="0" HorizontalAlignment="Left" Margin="362,284,0,0" VerticalAlignment="Top"/>
        <Label x:Name="t_counter" Content="0" HorizontalAlignment="Left" Margin="362,324,0,0" VerticalAlignment="Top"/>
        <Button Content="Remove dublicates" HorizontalAlignment="Left" Margin="382,197,0,0" VerticalAlignment="Top" Width="108" Click="Button_Click_1"/>
    </Grid>
</Window>
